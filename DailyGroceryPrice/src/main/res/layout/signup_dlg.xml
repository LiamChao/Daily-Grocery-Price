<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@color/backgroundcolor2">


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="0dp"
        android:background="@color/Teal"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/mar_15"
        android:text="@string/f00002_title"
        android:textColor="@color/White"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/f00002_e001"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/title"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="@dimen/mar_15"
        android:autofillHints=""
        android:background="@drawable/button03"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="@string/f00002_t001"
        android:inputType="textWebEditText"
        android:paddingStart="@dimen/mar_10"
        android:textColor="@color/Teal"
        android:textSize="16sp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/f00002_e002"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/f00002_e001"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="@dimen/mar_15"
        android:background="@drawable/button03"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="@string/f00002_t002"
        android:inputType="textEmailAddress"
        android:paddingStart="@dimen/mar_10"
        android:textColor="@color/Teal"
        android:textSize="16sp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/f00002_e003"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="@dimen/mar_15"
        android:background="@drawable/button03"
        android:backgroundTint="@color/backgroundcolor1"
        android:ems="10"
        android:gravity="center_vertical"
        android:importantForAutofill="no"
        android:inputType="textEmailAddress"
        android:paddingStart="@dimen/mar_10"
        android:textColor="@color/Teal"
        android:textSize="14sp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/f00002_e004"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/f00002_e002"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="@dimen/mar_15"
        android:background="@drawable/button03"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="@string/f00002_t004"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:paddingStart="@dimen/mar_10"
        android:textColor="@color/Teal"
        android:textSize="16sp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/f00002_e005"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/f00002_e004"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="@dimen/mar_15"
        android:background="@drawable/button03"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="@string/f00002_t005"
        android:inputType="textPassword"
        android:paddingStart="@dimen/mar_10"
        android:textColor="@color/Teal"
        android:textSize="16sp"
        android:textStyle="italic"
        android:visibility="visible" />

    <Button
        android:id="@+id/f00002_btnOK"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_below="@+id/f00002_e005"
        android:layout_marginStart="@dimen/mar_15"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="@dimen/mar_20"
        android:background="@drawable/button04"
        android:text="@string/f00002_b001"
        android:textColor="@color/White"
        android:textSize="16sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/f00002_btnCancel"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/f00002_btnOK"
        android:layout_alignEnd="@+id/f00002_e005"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="@dimen/mar_20"
        android:background="@drawable/button03"
        android:text="@string/f00002_b002"
        android:textColor="@color/Teal"
        android:textSize="16sp"
        android:textStyle="bold|italic" />
</RelativeLayout>